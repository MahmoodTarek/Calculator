<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator">
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <style name="CalcButton">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CalcButton.operator" parent="CalcButton">
        <item name="android:textColor">@color/off_white</item>
        <item name="android:background">@drawable/orange_circle_button</item>
    </style>

    <style name="CalcButton.numbers" parent="CalcButton">
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@drawable/white_circle_button</item>
    </style>

</resources>